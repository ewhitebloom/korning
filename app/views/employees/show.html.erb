<h1><%="#{@employee.first} #{@employee.last}'s Sales Figures"%></h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Sales</th>
    </tr>
  </thead>

  <tbody>
    <% employee = @employee %>
    <tr>
      <td><%= employee.first %></td>
      <td><%= employee.last %></td>
      <td><%= employee.email %></td>
    </tr>
  </tbody>
  <thead>
   <tr>
    <th>Sale ID</th>
    <th>Sale Amount</th>
    <th>Units Sold</th>
    <th>Invoice Number</th>
    <th>Invoice Frequency</th>
    <th>Product Name</th>
    <th>Customer Name</th>
  </tr>
</thead>
<tbody>

  <% @sales.each do |employee_sale| %>
  <tr>
  <td><%= employee_sale.id %></td>
  <td><%= employee_sale.sale_amount %></td>
  <td><%= employee_sale.units_sold %></td>
  <td><%= employee_sale.invoice_no %></td>
  <td><%= employee_sale.invoice_frequency %></td>
  <td><%= employee_sale.product.name %></td>
  <td><%= employee_sale.customer.name %></td>
  <td>        </td>
  </tr>
  <% end %>

</tbody>

</table>

<h1>Sales</h1>

<table>
  <thead>
    <tr>
      <th>Sale Date</th>
      <th>Sale Amount</th>
      <th>Units Sold</th>
      <th>Unit Price</th>
      <th>Invoice Number</th>
      <th>Invoice Frequency</th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.sale_date %></td>
        <td><%= sale.sale_amount %></td>
        <td><%= sale.units_sold %></td>
        <td><%= sale.product.unit_price %></td>
        <td><%= sale.invoice_no %></td>
        <td><%= sale.invoice_frequency %></td>
      </tr>
    <% end %>
  </tbody>
</table>
